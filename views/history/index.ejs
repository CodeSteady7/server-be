<div class="content-wrapper pt-4">
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <div class="card">
            <div class="card-header">
              <h3 class="card-title">FORM BALOG</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
              <table id="example1" class="table table-bordered table-striped">
                <thead>
                  <tr>
                    <th>No</th>
                    <th>Tanggal</th>
                    <th>Judul</th>
                    <th>Lokasi</th>
                    <th>Deskripsi</th>
                    <th>User</th>
                    <th>Laporan Perbaikan</th>
                    <th>Image</th>
                    <th>Procces</th>
                    <th>Action</th>
                  </tr>
                </thead>
                <tbody>
                  <% for(let i = 0; i < data.db_history.length; i++) { %>
                  <!--  -->
                  <tr>
                    <td><%= i + 1 %></td>
                    <td><%= data.db_history[i].item.createdAt %></td>
                    <td><%= data.db_history[i].item.judul %></td>
                    <td><%= data.db_history[i].item.lokasi %></td>
                    <td><%= data.db_history[i].item.deskripsi %></td>

                    <td><%= data.db_history[i].setUserHistory %></td>
                    <td><%= data.db_history[i].item.reportRepair %></td>
                    <td>
                      <img
                        src="/data/uploads/<%=data.db_history[i].item.imageBase64%>"
                        style="width: 50px; height: 50px" />
                    </td>
                    <td>
                      <div
                        class="badge badge-<%= data.db_history[i].item.status === 'Menunggu' ?'warning':'success' %> p-2">
                        <%= data.db_history[i].item.status %>
                      </div>
                    </td>
                    <td>
                      <button class="btn btn-primary" style="margin: 0px 5px">
                        <i class="fa fa-edit"></i>
                      </button>
                    </td>
                  </tr>

                  <!--  -->
                  <% } %>
                </tbody>
              </table>
            </div>
            <!-- /.card-body -->
          </div>
          <!-- /.card -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
</div>

